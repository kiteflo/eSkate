<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sobag.parsetemplate.RidingActivity"
    android:background="@color/default_background">

    <ScrollView
        android:tag="sv_scroll"
        android:id="@+id/sv_scroll"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"
        android:layout_above="@+id/custom_button"
        >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:id="@+id/ll_con"
            android:tag="ll_con"
            >
            <LinearLayout
                android:tag="ll_container"
                android:id="@+id/ll_container"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:weightSum="1.0"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                >
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    android:layout_weight="0.5"
                    >
                    <TextView
                        android:tag="tv_location"
                        android:id="@+id/tv_location"
                        style="@style/section_title_top"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/header_track"
                        android:paddingTop="30dp"/>
                    <View
                        style="@style/section_title_board_divider"
                        android:id="@+id/view_divider"
                        android:layout_below="@+id/tv_location"
                        android:layout_width="fill_parent"
                        android:layout_height="0.5dp"
                        />
                    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                              android:tag="frag_map"
                              android:id="@+id/frag_map"
                              android:layout_width="fill_parent"
                              android:layout_height="fill_parent"
                              android:name="com.google.android.gms.maps.MapFragment"
                              android:layout_marginTop="10dp"
                        />
                </LinearLayout>
                <RelativeLayout
                    android:paddingTop="20dp"
                    android:layout_weight="0.5"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/ll_speedbar"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="0.9">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:orientation="vertical"
                            android:gravity="center"
                            >
                            <TextView
                                android:tag="tv_distance"
                                android:id="@+id/tv_distance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="00.00"
                                android:textSize="34dp"
                                android:textColor="@color/white"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="distance (km)"
                                android:textColor="@color/white"
                                android:textSize="14dp"
                                />
                        </LinearLayout>
                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:background="@color/poisonGreen"/>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:orientation="vertical"
                            android:gravity="center"
                            >
                            <TextView
                                android:tag="tv_maxSpeed"
                                android:id="@+id/tv_maxSpeed"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="00.00"
                                android:textSize="34dp"
                                android:textColor="@color/white"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="max speed (km)"
                                android:textSize="14dp"
                                android:textColor="@color/white"
                                />
                        </LinearLayout>
                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:background="@color/poisonGreen"/>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:orientation="vertical"
                            android:gravity="center"
                            >
                            <TextView
                                android:tag="tv_avgSpeed"
                                android:id="@+id/tv_avgSpeed"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="00.00"
                                android:textSize="34dp"
                                android:textColor="@color/white"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="avg speed (km)"
                                android:textSize="14dp"
                                android:textColor="@color/white"
                                />
                        </LinearLayout>

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_below="@+id/ll_speedbar">
                        <ImageView
                            android:id="@+id/iv_photoButton"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/image_button_camera"
                            android:layout_centerInParent="true"
                            android:clickable="true"
                            android:focusable="true"
                            android:onClick="onTakePhoto"/>
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:tag="ll_shareContainer"
                android:id="@+id/ll_shareContainer"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:visibility="gone"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                >

                <!-- describe -->
                <TextView
                    android:tag="tv_describe"
                    android:id="@+id/tv_describe"
                    style="@style/section_title_top"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/header_description"
                    />
                <View
                    style="@style/section_title_board_divider"
                    android:id="@+id/view_divider_describe"
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    />
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">
                    <EditText
                        android:tag="et_rideTitle"
                        android:id="@+id/et_rideTitle"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/lab_rideHolder"
                        android:drawableLeft="@drawable/ic_action_user"
                        style="@style/editTextField"
                        android:singleLine="true"/>
                </RelativeLayout>

                <!-- share/publish -->
                <TextView
                    android:tag="tv_share"
                    android:id="@+id/tv_share"
                    style="@style/section_title_top"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/header_publish"
                    />
                <View
                    style="@style/section_title_board_divider"
                    android:id="@+id/view_divider_share"
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    />

                <!-- eskate publish -->
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp"
                    >
                    <ImageView
                        android:id="@+id/iv_eskate"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/eskate_256"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        />
                    <TextView
                        android:tag="tv_eskate"
                        android:id="@+id/tv_eskate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="share ride on eSkate"
                        android:gravity="center_vertical"
                        android:textColor="@color/white"
                        android:layout_toRightOf="@+id/iv_eskate"
                        android:paddingLeft="10dp"
                        android:layout_centerVertical="true"
                        />
                    <ToggleButton
                        android:layout_width="50dp"
                        android:layout_height="28dp"
                        android:textOff=""
                        android:textOn=""
                        android:background="@drawable/toggle_selector"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        />
                </RelativeLayout>

                <!-- fb publish -->
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">
                    <ImageView
                        android:id="@+id/iv_facebook"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/facebook_256"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        />
                    <TextView
                        android:tag="tv_facebook"
                        android:id="@+id/tv_facebook"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lab_share_fb"
                        android:gravity="center_vertical"
                        android:textColor="@color/white"
                        android:layout_toRightOf="@+id/iv_facebook"
                        android:paddingLeft="10dp"
                        android:layout_centerVertical="true"
                        />
                    <ToggleButton
                        android:layout_width="50dp"
                        android:layout_height="28dp"
                        android:textOff=""
                        android:textOn=""
                        android:background="@drawable/toggle_selector"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        />
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/custom_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        style="@style/signup_button_with_icon"
        android:clickable="true"
        android:onClick="onFinish"
        android:layout_alignParentBottom="true"
        >
        <ImageView
            android:layout_centerInParent="true"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:clickable="false"
            android:background="#00000000"
            android:padding="5dp"
            />
        <TextView
            android:tag="tv_finish"
            android:id="@+id/tv_finish"
            style="@style/signup_button_with_icon_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:background="#00000000"
            android:text="@string/but_stop"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>

    <ProgressBar
        android:tag="progressBar"
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone"/>
</RelativeLayout>
