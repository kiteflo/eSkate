<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sobag.parsetemplate.RidingActivity"
    android:background="@color/default_background">

    <ScrollView
        android:tag="sv_scroll"
        android:id="@+id/sv_scroll"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"
        android:layout_above="@+id/footerContainer"
        >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:id="@+id/ll_con"
            android:tag="ll_con"
            >
            <LinearLayout
                android:tag="ll_container"
                android:id="@+id/ll_container"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:weightSum="1.0"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                >
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    android:layout_weight="0.5"
                    >
                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="30dp">
                        <TextView
                            android:tag="tv_location"
                            android:id="@+id/tv_location"
                            style="@style/section_title_top"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/header_track"
                            android:layout_alignParentLeft="true"
                            />
                        <TextView
                            android:tag="tv_provider"
                            android:id="@+id/tv_provider"
                            style="@style/section_title_provider"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/header_NETWORK"
                            android:layout_alignParentRight="true"
                            />
                    </RelativeLayout>
                    <View
                        style="@style/section_title_board_divider"
                        android:id="@+id/view_divider"
                        android:layout_below="@+id/tv_location"
                        android:layout_width="fill_parent"
                        android:layout_height="0.5dp"
                        />
                    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                              android:tag="frag_map"
                              android:id="@+id/frag_map"
                              android:layout_width="fill_parent"
                              android:layout_height="fill_parent"
                              android:name="com.google.android.gms.maps.MapFragment"
                              android:layout_marginTop="10dp"
                        />
                </LinearLayout>
                <RelativeLayout
                    android:paddingTop="20dp"
                    android:layout_weight="0.5"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    >
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="vertical"
                        android:weightSum="1.5">
                        <LinearLayout
                            android:id="@+id/ll_speedbar"
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.5"
                            android:orientation="horizontal"
                            >
                            <!-- avg speed -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.3"
                                android:orientation="vertical"
                                android:gravity="center"
                                >
                                <TextView
                                    android:tag="tv_avgSpeed"
                                    android:id="@+id/tv_avgSpeed"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="00.00"
                                    style="@style/average_value"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="avg speed (km)"
                                    style="@style/average_label"
                                    />
                            </LinearLayout>

                            <View
                                android:layout_width="0.5dp"
                                android:layout_height="match_parent"
                                android:background="@color/poisonGreen"
                                android:layout_marginRight="10dp"
                                android:layout_marginLeft="10dp"
                                />
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.3"
                                android:orientation="vertical"
                                android:gravity="center"
                                >
                                <TextView
                                    android:tag="tv_distance"
                                    android:id="@+id/tv_distance"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="00.00"
                                    style="@style/average_value"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="distance (km)"
                                    style="@style/average_label"
                                    />
                            </LinearLayout>
                            <View
                                android:layout_width="0.5dp"
                                android:layout_height="match_parent"
                                android:background="@color/poisonGreen"
                                android:layout_marginRight="10dp"
                                android:layout_marginLeft="10dp"
                                />
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.3"
                                android:orientation="vertical"
                                android:gravity="center"
                                >
                                <TextView
                                    android:tag="tv_maxSpeed"
                                    android:id="@+id/tv_maxSpeed"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="00.00"
                                    style="@style/average_value"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="max speed (km)"
                                    style="@style/average_label"
                                    />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_timebar"
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:orientation="horizontal"
                            android:layout_weight="0.5"
                            android:gravity="center"
                            >

                            <!-- timer -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.3"
                                android:orientation="vertical"
                                android:gravity="center"
                                >
                                <TextView
                                    android:tag="tv_timer"
                                    android:id="@+id/tv_timer"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="00:00:00"
                                    android:textSize="34dp"
                                    android:textColor="@color/white"
                                    />
                            </LinearLayout>
                        </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/ll_currentspeedbar"
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.5"
                            >

                            <TextView
                                android:tag="tv_speed"
                                android:id="@+id/tv_speed"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="00.00"
                                android:textSize="54dp"
                                android:textColor="@color/white"
                                android:layout_centerInParent="true"
                                />
                            <TextView
                                android:paddingLeft="10dp"
                                android:layout_toRightOf="@+id/tv_speed"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="km/h"
                                android:textColor="@color/white"
                                android:textSize="24dp"
                                android:layout_centerVertical="true"
                                />
                        </RelativeLayout>
                    </LinearLayout>


                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_below="@+id/hl_scroller_top"
                        android:visibility="gone">
                        <ImageView
                            android:id="@+id/iv_photoButton"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/image_button_camera"
                            android:layout_centerInParent="true"
                            android:clickable="true"
                            android:focusable="true"
                            android:onClick="onTakePhoto"
                            android:visibility="gone"/>
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:tag="ll_shareContainer"
                android:id="@+id/ll_shareContainer"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:visibility="gone"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                >

                <!-- describe -->
                <TextView
                    android:tag="tv_describe"
                    android:id="@+id/tv_describe"
                    style="@style/section_title_top"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/header_description"
                    />
                <View
                    style="@style/section_title_board_divider"
                    android:id="@+id/view_divider_describe"
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    />
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">
                    <EditText
                        android:tag="et_rideTitle"
                        android:id="@+id/et_rideTitle"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/lab_rideHolder"
                        android:drawableLeft="@drawable/ic_action_user"
                        style="@style/editTextField"
                        android:singleLine="true"/>
                </RelativeLayout>

                <!-- share/publish -->
                <TextView
                    android:tag="tv_share"
                    android:id="@+id/tv_share"
                    style="@style/section_title_top"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/header_publish"
                    />
                <View
                    style="@style/section_title_board_divider"
                    android:id="@+id/view_divider_share"
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    />

                <!-- eskate publish -->
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp"
                    >
                    <ImageView
                        android:id="@+id/iv_eskate"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/eskate_256"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        />
                    <TextView
                        android:tag="tv_eskate"
                        android:id="@+id/tv_eskate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="share ride on eSkate"
                        android:gravity="center_vertical"
                        android:textColor="@color/white"
                        android:layout_toRightOf="@+id/iv_eskate"
                        android:paddingLeft="10dp"
                        android:layout_centerVertical="true"
                        />
                    <ToggleButton
                        android:tag="toggle_eskate"
                        android:id="@+id/toggle_eskate"
                        android:layout_width="50dp"
                        android:layout_height="28dp"
                        android:textOff=""
                        android:textOn=""
                        android:background="@drawable/toggle_selector"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        />
                </RelativeLayout>

                <!-- fb publish -->
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">
                    <ImageView
                        android:id="@+id/iv_facebook"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/facebook_256"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        />
                    <TextView
                        android:tag="tv_facebook"
                        android:id="@+id/tv_facebook"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lab_share_fb"
                        android:gravity="center_vertical"
                        android:textColor="@color/white"
                        android:layout_toRightOf="@+id/iv_facebook"
                        android:paddingLeft="10dp"
                        android:layout_centerVertical="true"
                        />
                    <ToggleButton
                        android:tag="toggle_facebook"
                        android:id="@+id/toggle_facebook"
                        android:layout_width="50dp"
                        android:layout_height="28dp"
                        android:textOff=""
                        android:textOn=""
                        android:background="@drawable/toggle_selector"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        />
                </RelativeLayout>

                <ImageView
                    android:tag="iv_temp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/iv_temp"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/footerContainer"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true">

        <!-- protected pause/stop button -->
        <RelativeLayout
            android:tag="custom_button_protected"
            android:id="@+id/custom_button_protected"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:visibility="gone"
            >
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1.0">
                <RelativeLayout
                    android:layout_weight="0.5"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:clickable="false"
                    style="@style/action_button_with_protection"
                    >
                    <TextView
                        android:tag="tv_pause_protected"
                        android:id="@+id/tv_pause_protected"
                        style="@style/signup_button_with_icon_text"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:background="#00000000"
                        android:text="@string/but_pause"
                        android:layout_centerInParent="true"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:gravity="center_horizontal"
                        />
                </RelativeLayout>
                <View
                    android:layout_width="0.5dp"
                    android:layout_height="fill_parent"
                    android:background="@color/white"/>
                <RelativeLayout
                    android:layout_weight="0.5"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:clickable="false"
                    style="@style/action_button_with_protection"
                    >
                    <TextView
                        android:tag="tv_finish_protected"
                        android:id="@+id/tv_finish_protected"
                        style="@style/signup_button_with_icon_text"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:background="#00000000"
                        android:text="@string/but_finish"
                        android:layout_centerInParent="true"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:gravity="center_horizontal"
                        />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:visibility="invisible"
                android:id="@+id/view_lock_protected"
                android:tag="view_lock_protected"
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="@color/white"
                android:layout_alignParentTop="true"
                android:padding="0dp"
                android:layout_margin="0dp"/>
        </RelativeLayout>

        <!-- unprotected pause/finish button -->
        <RelativeLayout
            android:tag="custom_button"
            android:id="@+id/custom_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:visibility="gone"
            >
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1.0">
                <RelativeLayout
                    android:tag="but_pause"
                    android:id="@+id/but_pause"
                    android:layout_weight="0.5"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    style="@style/signup_button_with_icon"
                    android:clickable="true"
                    android:onClick="onPause"
                    >
                    <TextView
                        android:tag="tv_pause"
                        android:id="@+id/tv_pause"
                        style="@style/signup_button_with_icon_text"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:background="#00000000"
                        android:text="@string/but_pause"
                        android:layout_centerInParent="true"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:gravity="center_horizontal"
                        />
                </RelativeLayout>
                <View
                    android:tag="view_divider_footer"
                    android:id="@+id/view_divider_footer"
                    android:layout_width="0.5dp"
                    android:layout_height="fill_parent"
                    android:background="@color/white"/>
                <RelativeLayout
                    android:layout_weight="0.5"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:clickable="true"
                    android:onClick="onFinish"
                    style="@style/signup_button_with_icon"
                    >
                    <TextView
                        android:tag="tv_finish"
                        android:id="@+id/tv_finish"
                        style="@style/signup_button_with_icon_text"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:background="#00000000"
                        android:text="@string/but_finish"
                        android:layout_centerInParent="true"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:gravity="center_horizontal"
                        />
                </RelativeLayout>
            </LinearLayout>
            <View
                android:visibility="invisible"
                android:id="@+id/view_lock"
                android:tag="view_lock"
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="@color/white"
                android:layout_alignParentTop="true"
                android:padding="0dp"
                android:layout_margin="0dp"/>
        </RelativeLayout>

        <!-- unprotected start button -->
        <RelativeLayout
            android:tag="start_button"
            android:id="@+id/start_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:visibility="visible"
            >
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1.0">
                <RelativeLayout
                    android:tag="but_start"
                    android:id="@+id/but_start"
                    android:layout_weight="0.5"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    style="@style/signup_button_with_icon"
                    android:clickable="true"
                    android:onClick="onStart"
                    >
                    <TextView
                        android:tag="tv_start"
                        android:id="@+id/tv_start"
                        style="@style/signup_button_with_icon_text"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:background="#00000000"
                        android:text="@string/but_start"
                        android:layout_centerInParent="true"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:gravity="center_horizontal"
                        />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <ProgressBar
        android:tag="progressBar"
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone"/>
</RelativeLayout>
