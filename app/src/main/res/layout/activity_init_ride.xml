<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sobag.parsetemplate.InitRideActivity"
    android:background="@color/default_background"
    >

    <TextView
        android:tag="tv_board"
        android:id="@+id/tv_board"
        style="@style/section_title_top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/activity_init_ride_board"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="30dp"/>
    <View
        style="@style/section_title_board_divider"
        android:id="@+id/view_tv_board_divider"
        android:layout_below="@+id/tv_board"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />
    <ListView
        android:id="@+id/lv_boards"
        android:layout_below="@+id/tv_board"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="10dp"
        android:divider="@drawable/list_divider"
        android:dividerHeight="1px"
        android:layout_above="@+id/custom_button">
    </ListView>

   <com.sobag.module.customButton.CustomButton
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="onNext"
        android:layout_alignParentBottom="true"
        custom:buttonTitle="@string/but_next"
        custom:buttonIcon="@drawable/lock_161"
        custom:showIcon="false"
        />
</RelativeLayout>
