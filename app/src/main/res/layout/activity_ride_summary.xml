<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sobag.parsetemplate.RideSummaryActivity"
    android:background="@color/default_background">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:weightSum="1.0"
        android:padding="10dp">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6">
            <RelativeLayout
                android:id="@+id/rl_header"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:paddingTop="20dp"
                android:gravity="center_vertical">
                <TextView
                    android:tag="tv_title"
                    android:id="@+id/tv_title"
                    style="@style/section_title_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    />
                <TextView
                    android:tag="tv_date"
                    android:id="@+id/tv_date"
                    style="@style/section_title_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
            <View
                style="@style/section_title_board_divider"
                android:id="@+id/view_divider"
                android:layout_below="@+id/rl_header"
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                />
            <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                      android:tag="frag_map"
                      android:id="@+id/frag_map"
                      android:layout_width="fill_parent"
                      android:layout_height="fill_parent"
                      android:name="com.google.android.gms.maps.MapFragment"
                      android:layout_marginTop="10dp"
                      android:layout_below="@id/view_divider"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4">
            <HorizontalScrollView
                android:id="@+id/hl_scroller"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/ll_speedbar"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1.2">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:orientation="vertical"
                        android:gravity="center"
                        >
                        <TextView
                            android:tag="tv_distance"
                            android:id="@+id/tv_distance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00.00"
                            android:textSize="34dp"
                            android:textColor="@color/white"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="distance (km)"
                            android:textColor="@color/white"
                            android:textSize="14dp"
                            />
                    </LinearLayout>
                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/poisonGreen"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        />
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:orientation="vertical"
                        android:gravity="center"
                        >
                        <TextView
                            android:tag="tv_maxSpeed"
                            android:id="@+id/tv_maxSpeed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00.00"
                            android:textSize="34dp"
                            android:textColor="@color/white"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="max speed (km)"
                            android:textSize="14dp"
                            android:textColor="@color/white"
                            />
                    </LinearLayout>
                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/poisonGreen"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:orientation="vertical"
                        android:gravity="center"
                        >
                        <TextView
                            android:tag="tv_avgSpeed"
                            android:id="@+id/tv_avgSpeed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00.00"
                            android:textSize="34dp"
                            android:textColor="@color/white"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="avg speed (km)"
                            android:textSize="14dp"
                            android:textColor="@color/white"
                            />
                    </LinearLayout>

                    <!-- timer -->
                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/poisonGreen"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:orientation="vertical"
                        android:gravity="center"
                        >
                        <TextView
                            android:tag="tv_timer"
                            android:id="@+id/tv_timer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00:00:00"
                            android:textSize="34dp"
                            android:textColor="@color/white"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="duration"
                            android:textSize="14dp"
                            android:textColor="@color/white"
                            />
                    </LinearLayout>

                </LinearLayout>

            </HorizontalScrollView>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
