<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sobag.parsetemplate" >

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_eskate"
        android:label="eSkate"
        android:logo="@drawable/ic_eskate"
        android:theme="@style/AppTheme" >

        <!-- google maps -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <uses-library android:name="com.google.android.maps" />

        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyBFReKyXz2xD_J7m5Z4-lk4J2dXiq3MoTE" />

        <activity
            android:name=".SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ErrorActivity" >
        </activity>
        <activity android:name=".LoginActivity" >
        </activity>

        <!-- FB login -->
        <activity
            android:name="com.facebook.LoginActivity"
            android:label="@string/title_facebook_login"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" >
        </activity>
        <activity
            android:name=".SignupActivity"
            android:label="@string/title_activity_signup_email"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".LaunchActivity"
            android:label="@string/title_activity_launch"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".InitRideActivity"
            android:label="@string/title_activity_init_ride"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".RidesActivity"
            android:label="@string/title_activity_rides"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".LocationActivity"
            android:label="@string/title_activity_location"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".RidingActivity"
            android:label="@string/title_activity_riding"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".RideSummaryActivity"
            android:label="@string/title_activity_ride_summary" >
        </activity>
        <activity
            android:name=".BluetoothActivity"
            android:label="@string/title_activity_bluetooth" >
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.BLUETOOTH" />

</manifest>
